{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@client-constants": [
        "src/client/constants"
      ],
      "@client-core": [
        "src/client/core"
      ],
      "@client-options": [
        "src/client/options"
      ],
      "@server-constants": [
        "src/server/constants"
      ],
      "@server-core": [
        "src/server/core"
      ],
      "@server-options": [
        "src/server/options"
      ],
      "@server-helpers": [
        "src/server/helpers"
      ],
      "@server-params": [
        "src/server/params"
      ],
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/node/timers.d.ts"
  ]
}
